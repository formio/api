{
  "name": "@formio/api",
  "version": "0.5.0",
  "description": "A form API library that creates rest endpoints and database integrations for forms.",
  "main": "lib/index.js",
  "scripts": {
    "test:coverage": "nyc --reporter=text mocha --reporter spec './{,!(node_modules)/**/}*.spec.js'",
    "test": "mocha --require ts-node/register --reporter spec './{,!(node_modules)/**/}*.spec.ts'",
    "watch": "tsc -w",
    "build": "tsc",
    "lint": "tslint -p . --fix",
    "prepublish": "npm run build"
  },
  "keywords": [
    "Form.io",
    "forms",
    "rest",
    "api"
  ],
  "author": "Randall Knutson <randall@form.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "composable-middleware": "^0.3.0",
    "core-js": "^3.1.4",
    "debug": "^3.1.0",
    "fast-json-patch": "^2.0.6",
    "formiojs": "^4.9.25",
    "joi": "^13.2.0",
    "lodash": "^4.17.15",
    "memory-cache": "^0.2.0",
    "moment": "^2.22.1",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.2",
    "@types/sinon": "^7.5.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^15.0.0",
    "pre-commit": "^1.2.2",
    "sinon": "^5.0.2",
    "ts-node": "^8.4.1",
    "ts-sinon": "^1.0.24",
    "tslint": "^5.20.1",
    "typescript": "^3.5.3"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formio/form-api.git"
  },
  "bugs": {
    "url": "https://github.com/formio/form-api/issues"
  }
}
